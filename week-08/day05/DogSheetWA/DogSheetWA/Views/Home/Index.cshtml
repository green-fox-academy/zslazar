@model List<DogSheetWA.Models.Sheet>

<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>DogSheet</title>
</head>
<body>
    <h1 class="text-center">Results</h1>
    <br />
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Handler</th>
                <th scope="col">Dog</th>
                <th scope="col">Specialization</th>
                <th scope="col">Level</th>
                <th scope="col">Score</th>
                <th scope="col">xXx</th>
                <th scope="col">O</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@Model.IndexOf(item)</th>
                    <td>@item.Handler</td>
                    <td>@item.Dog</td>
                    <td>@item.Specialization</td>
                    <td>@item.Level</td>
                    @if (item.Score > 69)
                    {
                        <td style="color:darkgoldenrod">@item.Score</td>
                    }
                    else
                    {
                        <td>@item.Score</td>
                    }
                    <td><a href="/@item.Id/delete/">Delete</a></td>
                    <td><a href="/@item.Id/edit/">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <p class="font-weight-bold"><a href="/add">Add new result</a></p>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
